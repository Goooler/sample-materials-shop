{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:base",
  ],
  "packageRules": [
    {
      "groupName": "Kotlin and KSP",
      "matchPackagePrefixes": [
        "com.google.devtools.ksp",
      ],
      "matchPackagePatterns": [
        "org.jetbrains.kotlin.*",
      ]
    },
    {
      "groupName": "AGP",
      "matchPackagePatterns": [
        "com.android.*",
      ]
    },
  ]
}
